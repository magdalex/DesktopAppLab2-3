<Window x:Class="Lab2WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <RadioButton x:Name="testButton" Content="Test Scores" HorizontalAlignment="Center" Margin="0,207,0,0" VerticalAlignment="Top" Checked="testButton_Checked"/>
        <RadioButton x:Name="bankButton" Content="BankCharges" HorizontalAlignment="Center" Margin="0,247,0,0" VerticalAlignment="Top" Checked="bankButton_Checked"/>
        <RadioButton x:Name="shippingButton" Content="ShippingCharges" HorizontalAlignment="Center" Margin="0,286,0,0" VerticalAlignment="Top" Checked="shippingButton_Checked"/>
        <RadioButton x:Name="distanceButton" Content="DistanceTraveled" HorizontalAlignment="Center" Margin="0,326,0,0" VerticalAlignment="Top" Checked="distanceButton_Checked"/>
        <Label Content="Choose which application you want to run:" HorizontalAlignment="Center" Margin="0,145,0,0" VerticalAlignment="Top"/>
        <Label x:Name="title" Content="MAIN MENU" HorizontalAlignment="Center" Margin="0,72,0,0" VerticalAlignment="Top" FontSize="20"/>

    </Grid>
</Window>
